<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head', {webtitle: "Home"}) %>
<body>
  <div class="container">
    <%- include('./partials/header') %>
    <section class="slider">
      <img src="images/home-banner-1.jpg" alt="">
    </section>
    <section class="intermediate">
      
      <h1>Ropa para programadores, hecha por programadores</h1>
      
      <a href="/products/products-list/camisetas">
        <input type="button" value="¡Ir a la tienda!">
      </a>
  
    </section>
    <section class="products">
      <div class="products-list">
        <% for(let i=0; i < products.length; i++) { %>
          <div class="card">
            <div class="description">
              <p><%= products[i].name %></p>
            </div>
            <a href="/products/products-list/<%= products[i].category %>"><img src="/images/products/<%= products[i].image %>"  alt="<%= products[i].name %>"></a> 
          </div>       
        <% } %>
    </section>
    <%- include('./partials/footer') %>
  </div>
  <div id="modal-menu" class="modal">
    <a class="close" href="#">X</a>
    <li><a href="/">Inicio</a></li>
    <li><a href="/">Tienda</a></li>
    <li><a class="red" href="/users/login">Iniciar sesión</a></li>
    <li><a href="/users/register">Registrate</a></li>
    <a class="cart" href="/products/cart"><i class="fas fa-solid fa-cart-shopping"></i></a>
  </div>
</body>

</html>